import tea.green.type
import tea.green.string

[[ cpp ]] { #include <cstdlib> }

`set process_success = 0
`set process_failed  = 1

module process {
    fn process#abort() {
        [[ unsafe ]] {
            [[ cpp ]] {
                std::abort();
            }
        }
    }

    fn process#exit(n: uint8) {
        [[ unsafe ]] {
            [[ cpp ]] {
                std::exit(n);
            }
        }
    }

    fn process#env(data: string) = string {
        [[ unsafe ]] {
            [[ cpp ]] {
                return \
                    std::getenv(cpp_str::c_str(data));
            }
        }
    }
} // process