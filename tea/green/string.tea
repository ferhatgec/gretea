import tea.green.type

module str {
    fn str#first(data: string) = char {
        var mut __first: int64 = 0

        for &ch in data {
            . ch
        }

        . (char)__first
    }

    fn str#last(data: string) = char {
        var mut __last: int64 = 0

        for &ch in data {
            [[ unsafe ]] {
                __last = ch
            }
        } . (char)__last
    }
} // str