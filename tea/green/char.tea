import tea.green.type
import tea.green.string

`set character_ascii = 32

module ch {
    fn ch#upper(data: char) = char {
        if data >= 'a' && data <= 'z' {
            . data - character_ascii
        } . data
    }

    fn ch#lower(data: char) = char {
        if data >= 'A' && data <= 'Z' {
            . data + character_ascii
        } . data
    }

    fn ch#is_upper(ch: char) = bool {
        if ch >= 'A' && ch <= 'Z' {
            . true
        } . false
    }

    fn ch#is_lower(ch: char) = bool {
        if ch >= 'a' && ch <= 'z' {
            . true
        } . false
    }
} // ch